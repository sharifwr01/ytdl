# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here

# Telegram Client API (Required for 2GB+ uploads)
# Get from: https://my.telegram.org/apps
API_ID=12345678
API_HASH=0123456789abcdef0123456789abcdef

# Database Configuration
DB_URL=sqlite+aiosqlite:///bot.db
# For PostgreSQL: postgresql+asyncpg://user:pass@localhost:5432/ytbot
DB_PASSWORD=changeme

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Limits (4GB via Pyrogram Client API)
MAX_FILE_MB=4000
TELEGRAM_UPLOAD_LIMIT_MB=4000

# Download Settings
MAX_CONCURRENT_DOWNLOADS=5
RATE_LIMIT_PER_USER_PER_DAY=50

# Admin Users (comma-separated Telegram user IDs)
# Get your ID from @userinfobot
ADMIN_USER_IDS=123456789,987654321

# Storage Backend (gdrive recommended)
STORAGE_BACKEND=gdrive

# Google Drive Configuration (Optional but recommended)
# Get from: https://console.cloud.google.com/
GDRIVE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GDRIVE_CLIENT_SECRET=your_client_secret

# Google Drive Folder Name (auto-created)
GDRIVE_FOLDER_NAME=YTDL

# Performance Settings
# Use all available bandwidth and CPU
YT_DLP_CONCURRENT_FRAGMENTS=10
HTTP_CHUNK_SIZE=10485760

# Monitoring (optional)
SENTRY_DSN=

# Development Mode
DEBUG=false