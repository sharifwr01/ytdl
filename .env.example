# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here

# Database Configuration
# For PostgreSQL:
# DB_URL=postgresql+asyncpg://ytbot:password@localhost:5432/ytbot
# For SQLite (default):
DB_URL=sqlite+aiosqlite:///bot.db
DB_PASSWORD=changeme

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Limits (in MB)
MAX_FILE_MB=50
TELEGRAM_UPLOAD_LIMIT_MB=50

# Rate Limiting
MAX_CONCURRENT_DOWNLOADS=3
RATE_LIMIT_PER_USER_PER_DAY=20

# Admin Users (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789,987654321

# Storage Backend (local, gdrive, s3)
STORAGE_BACKEND=local

# Google Drive Configuration (if using gdrive)
GDRIVE_CLIENT_ID=your_client_id
GDRIVE_CLIENT_SECRET=your_client_secret

# AWS S3 Configuration (if using s3)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn

# Webhook Mode (optional)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8443

# Development Mode
DEBUG=false